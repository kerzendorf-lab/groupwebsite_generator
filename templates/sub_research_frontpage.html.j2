</head>

<body>
    <!--header-->
    <header id="site-header" class="fixed-top">
        <div class="container">
            <nav class="navbar navbar-expand-lg stroke">
                <h1>
                    <a class="navbar-brand" href="../index.html">
                        <!--span class="fa fa-lightbulb"></span--> {{general.logo_title}}
                    </a>
                </h1>
                <!-- if logo is image enable this   
            <a class="navbar-brand" href="#index.html">
                <img src="image-path" alt="Your logo" title="Your logo" style="height:35px;" />
            </a> -->
                <button class="navbar-toggler collapsed bg-gradient" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon fa icon-expand fa-bars"></span>
                    <span class="navbar-toggler-icon fa icon-close fa-times"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                    <ul class="navbar-nav ms-lg-auto">
                        {% for page in general["navigation_bar"] %}
                        {% if page not in general %}
                        <!--<li class="nav-item active">-->
                        {% if page == "index" %}
                        <li class="nav-item">
                            <a class="nav-link" href="../{{ page_link(page) }}.html">Home<span
                                    class="sr-only">(current)</span></a>
                        </li>

                        {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="../{{ page_link(page) }}.html">{{ page }} <span
                                    class="sr-only">(current)</span></a>
                        </li>

                        {% endif %}
                        {% else %}
                        {% if page in general %}
                        <li class="nav-item">

                            <a class="nav-link dropdown-toggle" href="../{{ page_link(page) }}.html" id="navbarDropdown"
                                role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                {{ page }} <span class="fas fa-angle-down"></span>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                {% for sub_page in general[page] %}
                                <a class="dropdown-item"
                                    href="{{ page_link(sub_page)|lower }}.html">{{sub_page}}</a>
                                {% endfor %}
                            </div>
                        </li>
                        {% endif %}

                        {% endif %}
                        {% endfor %}
                    </ul>
                </div>

                <!-- toggle switch for light and dark theme -->
                <div class="cont-ser-position">
                    <nav class="navigation">
                        <div class="theme-switch-wrapper">
                            <label class="theme-switch" for="checkbox">
                                <input type="checkbox" id="checkbox">
                                <div class="mode-container">
                                    <i class="gg-sun"></i>
                                    <i class="gg-moon"></i>
                                </div>
                            </label>
                        </div>
                    </nav>
                </div>
                <!-- //toggle switch for light and dark theme -->
            </nav>
        </div>
    </header>
    <!--//header-->


    <!-- about banner -->
    <section class="w3l-about-breadcrumb text-center">
        <div class="breadcrumb-bg breadcrumb-bg-about py-5">
            <div class="container py-lg-5 py-md-4">
                <div class="banner-info-grid px-md-5">
                    <h2 class="w3l-title-breadcrumb mb-3">Our Research</h2>
                </div>
            </div>
        </div>
    </section>
    <!-- //about banner -->


        <!-- Blog Section -->
        
        <section class="w3l-blog">
            <div class="blog py-5" id="Newsblog">
                {% set project_list = content[(content['category'] == category)] %}
                {% if project_list.shape[0] > 0 %}
                <div class="text-center" style="padding-top: 5%;">
                    <h1>{{ category }}</h1>
                    <br>
                    <div class="container py-lg-5 py-md-4 py-2">
                        <div class="row">
                            <p class="mb-4" style="padding-bottom: 3%; text-align:left; font-size: 18px;">{{ research_general[category]['about'] }}</p>
                        </div>
                    </div>
                </div>
                <div class="container py-lg-5 py-md-4 py-2">
                    <div class="row">
                        {% set counter = 0 %}
                        {% for _, project in project_list.iterrows() %}
                        {% set content_data = ContentData(project['article_id']) %}
                        {% set project_info = content_data.load_json() %}
                        {% if counter < 3 %}
                        <div class="col-lg-4 col-md-6 item">
                            <div class="card">
                                <div class="card-header p-0 position-relative">
                                    <a href="{{ category|replace(' ', '_')|lower }}/{{ project['article_id']|lower }}.html"
                                        class="zoom d-block">
                                        <img style="max-width: 380px; max-height: 230px;" class="card-img-bottom d-block"
                                            src="../{{ project_info['cover_image'] }}" alt="array">
                                    </a>
                                    <div class="date">
                                        <p>{{ project_info['article_date'] }}</p>
                                    </div>
                                </div>
                                <div class="card-body blog-details" style="max-height: 220px">
                                    <h5 class="mb-3" style="height: 55px; overflow: hidden; display: flex; align-items: center;">
                                        <a style="overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;" href="{{ category|replace(' ', '_')|lower }}/{{ project['article_id']|lower }}.html">
                                            {{ project_info['title'] }}
                                        </a>
                                    </h5>
                                    <hr style="border-top: 1px dotted rgba(143, 143, 143);">
                                    <h5 class="mb-3" style="height: 80px; overflow: hidden; align-items: center;">
                                        <p style="overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical;">
                                        {{ project_info['short_description'] }}
                                        </p>
                                    </h5>    
                                </div>
                                <div class="card-footer">
                                    {% set author_id = project_info['author_id'] %}
                                    {% if author_id %}
                                        {% set member = MemberData(author_id) %}
                                        {% set author_info = member.basic_info() %}

                                        {% if author_info.nick_name != "" and not
                                        author_info.nick_name.strip().lower().startswith("enter") %}
                                        {% set author_name = member_info.nick_name ~ ' ' ~ author_info.last_name %}
                                        {% elif author_info.first_name != "" and not
                                        author_info.first_name.strip().lower().startswith("enter") %}
                                        {% set author_name = author_info.first_name ~ ' ' ~ author_info.last_name %}
                                        {% endif %} 

                                        <div class="author align-items-center">
                                            <a href="members/{{ author_id }}/{{ author_id }}.html" class="post-author"
                                                target="_blank">
                                                <img src="../members/{{ author_id }}/{{ author_info['image_path'] }}"
                                                    alt="Author's Image" class="img-fluid rounded-circle">
                                            </a>
                                            <ul class="blog-meta">
                                                <li>
                                                    <span class="meta-value">Article by </span>
                                                    <a href="../members/{{ author_id }}/{{ author_id }}.html"
                                                        target="_blank">{{ author_name }}</a>
                                                </li>
                                            </ul>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        {% set counter = counter + 1 %}
                        {% endif %}
                        {% endfor %}
                    </div>
                </div>
                {% endif %}
            </div>
        </section>


        <!-- //Blog Section -->



    <!-- footer block -->
    <footer class="w3l-footer-29-main">
        <div class="footer-29 pt-5 pb-4">
            <div class="container pt-md-4">
                <div class="row footer-top-29 d-flex justify-content-center justify-md-start">
                    <div class="col-lg-6 col-md-6 footer-list-29">
                        <h6 class="footer-title-29">Contact Info </h6>
                        {% if general.address != "" %}
                        <p class="mb-2 pe-xl-5">Address : {{ general.address }}
                        </p>
                        {% endif %}
                        {% if general.phone != "" %}
                        <p class="mb-2">Phone Number : <a href="tel:{{ general.address }}">{{ general.phone }}</a></p>
                        {% endif %}
                        {% if general.email != "" %}
                        <p class="mb-2">Email : <a href="mailto:{{ general.email }}">{{ general.email }}</a></p>
                        {% endif %}
                    </div>
                    <div class="col-lg-2 col-md-3 col-12 footer-list-29 mt-md-0 mt-4">
                        <ul>
                            <h6 class="footer-title-29">Quick Links</h6>
                            {% for link_text, link_url in general.useful_links.items() %}
                            <li><a href="{{ link_url }}" target="_blank">{{ link_text }}</a></li>
                            {% endfor %}

                        </ul>
                    </div>

                </div>
                <!-- copyright -->
                <p class="copy-footer-29 text-center mt-5 pb-2">{{general.footer_message}} <br>
                    Template by <a href="https://w3layouts.com/" target="_blank">W3Layouts</a></p>
                <!-- //copyright -->
            </div>
        </div>
    </footer>
    <!-- //footer block -->






    <!-- Js scripts -->
    <!-- move top -->
    <button onclick="topFunction()" id="movetop" title="Go to top" style="display: none;">
        <span class="fas fa-level-up-alt" aria-hidden="true"></span>
    </button>
    <script>
        // When the user scrolls down 20px from the top of the document, show the button
        window.onscroll = function () {
            scrollFunction()
        };

        function scrollFunction() {
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                document.getElementById("movetop").style.display = "block";
            } else {
                document.getElementById("movetop").style.display = "none";
            }
        }

        // When the user clicks on the button, scroll to the top of the document
        function topFunction() {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        }
    </script>
    <!-- //move top -->

