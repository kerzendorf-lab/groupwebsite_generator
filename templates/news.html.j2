    <!-- Blog Section -->

<section class="w3l-blog">
    <div class="blog py-5" id="Newsblog">
        <div class="container py-lg-5 py-md-4 py-2">
            {% for _, news in content.iterrows() %}
                {% set content_data = ContentData(news['article_id']) %}
                {% set news_info = content_data.load_json() %}
                <div class="row" style="padding-top: 5%;">
                    <div class="col-lg-6 col-md-6 item">
                        <div class="card">
                            <div class="card-header p-0 position-relative">
                                {% if news_info.category == category %}
                                <a href="news/{{ news_info.article_id|replace(' ', '_')|lower  }}.html" class="zoom d-block">
                                {% endif %}
                                {% if news_info.category != category %}
                                <a href="sub_research/{{ news_info.category|replace(' ', '_')|lower  }}/{{ news_info.article_id|replace(' ', '_')|lower  }}.html" class="zoom d-block">
                                {% endif %}
                                    <img style="max-width: 520px; max-height: 330px" class="card-img-bottom d-block"
                                        src="{{ news_info.cover_image }}" alt="array">
                                </a>
                                <div class="date">
                                    <p>{{ news_info.article_date }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 item">
                        <div class="card">
                            <div class="card-body blog-details" style="max-height: 330px">
                                {% if news_info.category == category %}
                                <a href="news/{{ news_info.article_id|replace(' ', '_')|lower  }}.html" class="zoom d-blog"
                                {% endif %}
                                {% if news_info.category != category %}
                                <a href="sub_research/{{ news_info.category|replace(' ', '_')|lower  }}/{{ news_info.article_id|replace(' ', '_')|lower  }}.html" class="zoom d-blog"
                                {% endif %}
                                    style="font-weight: bold; overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical;">
                                    {{ news_info.title }}
                                </a>
                                <hr style="border-top: 1px dotted rgba(143, 143, 143);">
                                <div class="price-review mb-1 align-items-center">
                                    <p style="font-size: 13px; overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 4; -webkit-box-orient: vertical;">
                                        {{ news_info.short_description }}
                                    </p>
                                </div>
                            </div>
                            <div class="card-footer">                  
                                <div>
                                    <ul class="blog-meta">
                                        <li>
                                            <a style="font-size:10px">Contributer(s):</a>
                                        </li>
                                        {% for person_id in news_info.people_involved_ids %}
                                                {% if person_id in member_ids.values.tolist() %}
                                                       
                                                    {% set member_data = MemberData(person_id) %}
                                                    {% set member_info = member_data.basic_info() %}
                                                    
                                                    {% if member_info.nick_name != "" and not member_info.nick_name.strip().lower().startswith("enter") %}
                                                        {% set member_name = member_info.nick_name %}
                                                    {% elif member_info.first_name != "" and not member_info.first_name.strip().lower().startswith("enter") %}
                                                        {% set member_name = member_info.first_name  %}
                                                    {% endif %}
                                                    <li>
                                                        <a href="../../members/{{ person_id }}/{{ person_id }}.html" target="_blank" style="font-size: 10px;">
                                                            {{ member_name }}
                                                        </a>
                                                    </li>
                                                
                                                {% elif person_id.strip().split(' ')[-1].strip().lower().startswith("http://") or person_id.strip().split(' ')[-1].strip().lower().startswith("https://") %}
                                                    <li>
                                                        <a href="{{ person_id.strip().split(' ')[-1] }}" target="_blank" style="font-size: 10px;">
                                                            {{ ' '.join(person_id.strip().split(' ')[0:-1]) }}
                                                        </a>
                                                    </li>

                                                {% else %}
                                                <li>
                                                    <a style="font-size: 10px;">
                                                        {{ person_id }}
                                                    </a>
                                                </li>
                                                {% endif %}
                                            
                                            {% if not loop.last %}
                                                <li>, </li>
                                            {% endif %}
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>  
    </div>
</section>

<!-- //Blog Section -->




